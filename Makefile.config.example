DOCDIR = doc/api

# set to yes to keep debugging information in native library or to prof to
# profile (with gprof) your program
#
# DEBUG = {yes|no|prof}
DEBUG = yes

# use for to convert the documentation to fix some accent problems
# RECODE = -pp "recode UTF-8..Latin-1 <"

# you can remove .opt if you only have camlp4o
PP = -pp camlp4o.opt

FLAGS = -g -w Ae -dtypes
OPT_FLAGS = -noassert -ccopt -O3

OCAMLC = ocamlfind ocamlc $(FLAGS)
OCAMLDOC = ocamlfind ocamldoc
OCAMLDEP = ocamlfind ocamldep
OCAMLMKTOP = ocamlfind ocamlmktop
INSTALL = ocamlfind install

INCLUDE = -package unix,str,extlib,camlzip,ptrees



ifeq ($(DEBUG),yes)
OCAMLOPT = ocamlfind ocamlopt -g
else
ifeq ($(DEBUG),prof)
OCAMLOPT = ocamlfind ocamlopt -g -p $(OPT_FLAGS)
else
OCAMLOPT = ocamlfind ocamlopt -g $(OPT_FLAGS)
endif
endif
