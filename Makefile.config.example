EXTLIB_PATH=+site-lib/extlib
CAMLZIP_PATH=+zip

INSTALL_DIR = `ocamlc -where`/javaLib
DOCDIR = doc

OPT_FLAGS=-noassert -ccopt -O3

DEBUG=no
CMO=no

OCAMLC = ocamlc.opt -w Ae -dtypes -g
OCAMLDOC = ocamldoc.opt
OCAMLDEP = ocamldep.opt
OCAMLMKTOP = ocamlmktop

# Uncomment the following line if you have recode on your system (otherwise,
# some name and other characters in the documentation will not appear the right
# way)
# RECODE = -pp "recode UTF-8..Latin-1 <"

INCLUDE = -I $(EXTLIB_PATH) -I $(CAMLZIP_PATH)
PP = -pp camlp4o.opt

ifeq ($(DEBUG),yes)
OCAMLOPT = ocamlopt.opt -g
else
ifeq ($(DEBUG),prof)
OCAMLOPT = ocamlopt.opt -p $(OPT_FLAGS)
else
OCAMLOPT = ocamlopt.opt $(OPT_FLAGS)
endif
endif
